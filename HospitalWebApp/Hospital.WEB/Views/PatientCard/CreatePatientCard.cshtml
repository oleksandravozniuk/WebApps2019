@model Hospital.WEB.Models.PatientCardViewModel

@{
    ViewBag.Title = "CreatePatientCard";
}

<h2>Add a record to the patient card</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <input type="hidden" name="PatientId" value="@Model.PatientId" />

    <div class="form-group">
        @Html.LabelFor(model => model.TextInfo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TextInfo, new { htmlAttributes = new { @class = "form-control" } })
        </div>

    </div>

    <input type="hidden" name="DateOfRecord" value="@Model.DateOfRecord" />


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Record" class="btn btn-default" />
        </div>
    </div>
</div>
}

<button>
    @Html.ActionLink("Back to List", "PatientCards")
</button>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}